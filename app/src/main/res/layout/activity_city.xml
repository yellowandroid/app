<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#fff0f0f0">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/red">
            <TextView
                android:id="@+id/title_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="当前城市：北京"
                android:textColor="#ffffffff"
                android:textSize="20dip"/>
            <ImageView
                android:id="@+id/title_back"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/base_action_bar_back_normal"/>
            <ImageView
                android:layout_width="1dip"
                android:layout_height="40dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/title_back"
                android:background="#ffffff"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/search_city_text"
        android:layout_below="@id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="搜索全国城市（中文）"
        android:layout_margin="10dip"
        android:drawableLeft="@drawable/magnifying_glass"
        android:drawablePadding="4dip"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:paddingLeft="10dip"
        android:paddingRight="30dip"
        android:singleLine="true"
        android:background="@drawable/contact_search_box_edittext_keyword_background"
        android:textSize="15sp"
        android:textColor="#ff000000"
        android:textColorHint="#ffcccccc"/>
    <ListView
        android:id="@+id/city_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_city_text"></ListView>
</RelativeLayout>